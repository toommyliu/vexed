{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4,
			"lineWidth": 100, 
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingComma": "none"
		}
	}
}