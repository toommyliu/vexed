{
	"name": "@vexed/electron",
	"version": "0.0.0",
	"main": "dist/main/index.js",
	"scripts": {
		"typecheck": "tsc --noEmit",
		"compile": "cross-env-shell \"pnpm typecheck || true\" && node esbuild.config.js",
		"compile:watch": "cross-env-shell \"pnpm typecheck || true\" && node esbuild.config.js --watch",
		"dev": "cross-env-shell \"pnpm compile\" && electron .",
		"dev:watch": "concurrently \"pnpm compile:watch\" \"electronmon .\"",
		"build": "cross-env-shell \"pnpm compile || true\" && electron-builder build",
		"build:all": "cross-env-shell \"pnpm compile || true\" && electron-builder build -mw",
		"docgen": "node scripts/docgen.js",
		"format": "prettier \"src/**/*\"",
		"format:write": "prettier \"src/**/*\" --write",
		"lint": "eslint \"src/**/*\"",
		"lint:fix": "eslint \"src/**/*\" --fix"
	},
	"dependencies": {
		"async-mutex": "^0.5.0",
		"fs-extra": "^11.2.0",
		"lodash.merge": "^4.6.2",
		"nw-flash-trust": "^0.3.0",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.4.0",
		"@typescript-eslint/parser": "^8.4.0",
		"concurrently": "^8.2.2",
		"cross-env-shell": "^7.0.3",
		"electron": "^11.5.0",
		"electron-builder": "^24.13.3",
		"electronmon": "^2.0.3",
		"esbuild": "^0.23.1",
		"eslint": "^9.10.0",
		"eslint-config-neon": "^0.2.0",
		"prettier": "^3.3.3",
		"typescript": "^5.5.4"
	},
	"electronmon": {
		"patterns": [
			"!dist/**/*",
			"!scripts/**/*"
		]
	}
}
