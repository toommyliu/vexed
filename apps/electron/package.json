{
	"name": "@vexed/electron",
	"version": "0.0.0",
	"main": "src/main/index.js",
	"scripts": {
		"postinstall": "node scripts/postinstall.js",
		"dev": "electron .",
		"dev:watch": "electronmon .",
		"build": "electron-builder build",
		"build:all": "electron-builder build -mw",
		"jsdoc": "node scripts/gen-jsdoc.js",
		"format": "prettier src/",
		"format:write": "prettier src/ --write"
	},
	"dependencies": {
		"async-mutex": "^0.5.0",
		"electron-prompt": "^1.7.0",
		"fs-extra": "^11.2.0",
		"node-fetch": "^2.7.0",
		"nw-flash-trust": "^0.3.0",
		"set-interval-async": "^3.0.3"
	},
	"devDependencies": {
		"doxxx": "^2.0.7",
		"electron": "11.5.0",
		"electron-builder": "^24.13.3",
		"electronmon": "^2.0.3",
		"prettier": "^3.3.2"
	},
	"electronmon": {
		"patterns": [
			"!dist/**/*",
			"!scripts/**/*"
		]
	}
}
