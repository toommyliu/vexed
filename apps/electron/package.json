{
	"name": "@vexed/electron",
	"version": "0.0.0",
	"main": "dist/main/index.js",
	"scripts": {
		"typecheck": "tsc --noEmit",
		"compile": "pnpm typecheck || true && babel src/ --out-dir dist/ --extensions .ts",
		"compile:watch": "pnpm typecheck || true && babel src/ --out-dir dist/ --extensions .ts --watch",
		"dev": "pnpm compile && electron .",
		"dev:watch": "concurrently \"pnpm compile:watch\" \"electronmon .\"",
		"build": "pnpm compile || true && electron-builder build",
		"build:all": "pnpm compile || true && electron-builder build -mw",
		"jsdoc": "node scripts/gen-jsdoc.js",
		"format": "prettier src/",
		"format:write": "prettier src/ --write"
	},
	"dependencies": {
		"async-mutex": "^0.5.0",
		"electron-prompt": "^1.7.0",
		"fs-extra": "^11.2.0",
		"node-fetch": "^2.7.0",
		"nw-flash-trust": "^0.3.0",
		"set-interval-async": "^3.0.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.8",
		"@babel/core": "^7.25.2",
		"@babel/plugin-transform-modules-commonjs": "^7.24.8",
		"@babel/preset-env": "^7.25.4",
		"@babel/preset-typescript": "^7.24.7",
		"@types/electron-prompt": "^1.6.5",
		"@types/node-fetch": "^2.6.11",
		"concurrently": "^8.2.2",
		"doxxx": "^2.0.7",
		"electron": "github:toommyliu/electron",
		"electron-builder": "^24.13.3",
		"electronmon": "^2.0.3",
		"prettier": "^3.3.2",
		"typescript": "^5.5.4"
	},
	"electronmon": {
		"patterns": [
			"!dist/**/*",
			"!scripts/**/*"
		]
	}
}
