{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
