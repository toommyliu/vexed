{
  "name": "@vexed/ui",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev",
    "build:css": "mkdir -p dist && tailwindcss -i src/lib/styles.css -o dist/styles.css --config tailwind.config.js --minify",
    "build": "vite build && npm run prepack && npm run build:css",
    "build:watch": "svelte-kit sync && svelte-package --watch",
    "preview": "vite preview",
    "prepare": "svelte-kit sync && vite build && npm run prepack && npm run build:css",
    "prepack": "svelte-kit sync && svelte-package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/styles.css",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": {
      "import": "./dist/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "svelte": "^5.0.0",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^3.4.17",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.0.4"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.554.0",
    "tailwind-variants": "^3.1.1"
  }
}
